@{
    Layout = null;
}
@Scripts.Render("~/bundles/myscript")
<link href="~/Content/Styles/StyleSheet1.css" rel="stylesheet" />
<link href='https://fonts.googleapis.com/css?family=Ubuntu:500' rel='stylesheet' type='text/css'>
@using (Html.BeginForm("LoginVerificacion", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data", @class = "box", @onsubmit = "return checkStuff()", @name = "form1", @id= "myForm" }))
{
    <div class="login">
        <div class="login-header">
            <h1>Login</h1>
        </div>

        <div class="login-form">
            <h3>Username:</h3>
            <input type="text" name="email" placeholder="Username" /><br>
            <h3>Password:</h3>
            <input type="password" name="password" placeholder="Password" />
            <br>
            <input type="submit" value="Login" class="login-button" />
            <br>
            <a class="sign-up">Sign Up!</a>
            <br>
            <h6 class="no-access">Can't access your account?</h6>
        </div>
    </div>
}
    <div class="error-page">
        <div class="try-again">Error: Try again?</div>
    </div>