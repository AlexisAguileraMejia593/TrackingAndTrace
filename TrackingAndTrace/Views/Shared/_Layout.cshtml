<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @{
                var rol = Context.Session["Rol"] as string;
            }

            @if (rol == "Administrador")
            {
                // Show the administrator parts of the layout
                <li>@Html.ActionLink("Admin Dashboard", "Dashboard", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
            }

            // Common parts of the layout
            <li>@Html.ActionLink("Profile", "Profile", "User", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Logout", "Logout", "User", new { area = "" }, new { @class = "nav-link" })</li>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Usuario", "Index", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Administrador", "Index", "Administrador", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Repartidor", "Index", "Repartidor", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Iniciar Sesion ", "Login", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <div class="navbar-nav">
                    <li>@Html.ActionLink("Iniciar Sesion ", "Login", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>